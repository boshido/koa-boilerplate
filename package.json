{
  "name": "Koa-Boilerplate",
  "version": "0.0.1",
  "description": "Koa simple boilerplate for doing rest api",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "debug": "DEBUG=koa*,worker,app* node index.js",
    "dev": "export NODE_ENV=development && DEBUG=koa*,worker,app* nodemon index.js",
    "test": "export NODE_ENV=test && mocha test --compilers js:babel-core/register",
    "commands:cron": "DEBUG=cron* node commands cron",
    "migrate:development": "./node_modules/.bin/sequelize db:migrate --config migrations/sequelize.config.js --env development",
    "migrate:undo:development": "./node_modules/.bin/sequelize db:migrate:undo:all --config migrations/sequelize.config.js --env development",
    "migrate:test": "export NODE_ENV=test && ./node_modules/.bin/sequelize db:migrate --config migrations/sequelize.config.js --env test",
    "migrate:undo:test": "export NODE_ENV=test && ./node_modules/.bin/sequelize db:migrate:undo:all --config migrations/sequelize.config.js --env test",
    "migration:create": "./node_modules/.bin/sequelize migration:create --config migrations/sequelize.config.js",
    "seed:development": "./node_modules/.bin/sequelize db:seed:all --config migrations/sequelize.config.js --env development",
    "seed:test": "./node_modules/.bin/sequelize db:seed:all --config migrations/sequelize.config.js --env test",
    "seed:undo:development": "./node_modules/.bin/sequelize db:seed:undo:all --config migrations/sequelize.config.js --env development",
    "seed:undo:test": "./node_modules/.bin/sequelize db:seed:undo:all --config migrations/sequelize.config.js --env test",
    "seed:create": "./node_modules/.bin/sequelize seed:create --config migrations/sequelize.config.js",
    "database:refresh": "npm run migrate:undo:development && npm run migrate:development && npm run seed:development"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boshido/koa-boilerplate.git"
  },
  "keywords": [
    "koa",
    "boilerplate",
    "rest",
    "api"
  ],
  "author": "Watchrapong Agsonchu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/boshido/koa-boilerplate/issues"
  },
  "homepage": "",
  "dependencies": {
    "babel-core": "^6.13.2",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "command-line-args": "^3.0.1",
    "continuation-local-storage": "^3.1.7",
    "cron": "^1.1.0",
    "crypto": "0.0.3",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "jsonwebtoken": "^6.2.0",
    "kcors": "^2.1.1",
    "koa": "^2.0.0",
    "koa-body": "^1.4.0",
    "koa-bodyparser": "^2.2.0",
    "koa-convert": "^1.2.0",
    "koa-json": "^1.1.1",
    "koa-passport": "^2.1.1",
    "koa-router": "^7.0.0",
    "mathjs": "^3.3.0",
    "moment": "^2.13.0",
    "mysql": "^2.12.0",
    "passport-jwt": "^2.0.0",
    "recursive-readdir-sync": "^1.0.6",
    "s3": "^4.4.0",
    "sequelize": "^3.24.8",
    "slack-node": "^0.2.0",
    "strong-cluster-control": "^2.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "babel-jest": "^12.0.2",
    "babel-polyfill": "^6.9.1",
    "chai": "^3.5.0",
    "eslint": "^3.10.1",
    "eslint-config-standard": "^5.2.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-flow-vars": "^0.3.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "http-status": "^0.2.3",
    "jest-cli": "^12.0.2",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.1",
    "sequelize-cli": "^2.4.0",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.2.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
